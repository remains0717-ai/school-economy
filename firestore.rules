rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // [1] 유저 문서 및 하위 컬렉션 (portfolio, deposits, loans, inventory)
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // 하위 컬렉션에 대한 재귀적 허용 (본인 및 관리자)
      match /{allSubcollections=**} {
        allow read, write: if request.auth != null && (
          request.auth.uid == userId || 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );
      }
    }

    // [2] 학급(classes) 정보 및 국고 로그
    match /classes/{classCode} {
      allow get: if true; 
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        resource.data.adminUid == request.auth.uid || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );

      // 국고 변동 로그
      match /treasuryLogs/{logId} {
        allow read: if true;
        allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }
    }

    // [3] 상점 아이템(items)
    match /items/{itemId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // 학생의 구매(재고 차감)를 위한 예외 허용
      allow update: if request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stock']);
    }
    
    // [4] 기존 호환성 유지
    match /playerData/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    match /logs/{logId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.uid == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
  }
}